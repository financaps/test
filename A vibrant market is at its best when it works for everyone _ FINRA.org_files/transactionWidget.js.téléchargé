var INTERVAL=.8,INCREMENT=1e6,count=0,url=window.location.pathname;function numberWithCommas(n){return n.toString().replace(/\B(?=(\d{3})+(?!\d))/g,",")}window.addEventListener("load",function(){setTimeout(function(){if("/"===url){var n=1e3*INTERVAL;document.getElementById("counter_2").innerHTML=count,setInterval(function(){count+=INCREMENT,document.getElementById("counter_2").innerHTML=numberWithCommas(count)},n)}},1e3)});